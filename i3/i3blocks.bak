general {
        output_format = "i3bar"
        colors = true
        interval = 5
}

order += "ipv6"
order += "wireless wlp0s20f3"
#order += "disk /"
#order += "run_watch DHCP"
#order += "run_watch VPNC"
order += "path_exists VPN"
# order += "ethernet eth0"
order += "battery 0"
# order += "cpu_temperature 0"
order += "memory"
# order += "load"
order += "cpu_usage"
order += "volume master"
order += "time"
#order += "read_file BRIGHTNESS"

wireless wlp0s20f3 {
        format_up = "W: (%quality at %essid, %bitrate) %ip"
        format_down = "W: down"
}

ethernet eth0 {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery 0 {
        format = "%status %percentage %remaining %emptytime"
        format_down = "No battery"
        status_chr = "‚ö°"
        status_bat = "üîã"
        status_unk = "?"
        status_full = "ÔâÄ"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPNC {
        # file containing the PID of a vpnc process
        pidfile = "/var/run/vpnc/pid"
}

path_exists VPN {
        # path exists when a VPN tunnel launched by nmcli/nm-applet is active
        path = "/proc/sys/net/ipv4/conf/tun0"
}

time {
	format = "%Y-%m-%d %H:%M"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
        hide_if_equals_localtime = true
}

load {
        format = "%5min"
}

cpu_usage {
	format = "cpu:%usage"
}

memory {
        format = "%used/%total"
#        threshold_degraded = "10%"
#        format_degraded = "MEMORY: %free"
}

disk "/" {
        format = "%free"
}

read_file uptime {
        path = "/proc/uptime"
}

volume master {
        format = "‚ô™:%volume"
        format_muted = "‚ô™:muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

read_file BRIGHTNESS {
#	format = ‚ÄúBRI: %content‚Äù
	path = ‚Äú/home/tommy/.config/brightness‚Äù
	max_characters = 5
}
